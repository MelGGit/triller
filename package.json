  "dependencies": {
    "@ethersproject/abi": "^5.6.1",
    "@ethersproject/bytes": "^5.6.1",
    "@ethersproject/providers": "^5.6.3",
    "@typechain/ethers-v5": "^10.0.0",
    "@types/node": "^17.0.23",
    "@vueuse/components": "^8.2.5",
    "@vueuse/core": "^8.2.5",
    "@vueuse/head": "^0.7.6",
    "ethers": "^5.6.3",
    "pinia": "^2.0.13",
    "typechain": "^8.0.0",
    "vue": "^3.2.25",
    "vue-router": "^4.0.14"
  },
  "devDependencies": {
    "@vitejs/plugin-vue": "^2.3.0",
    "autoprefixer": "^10.4.4",
    "postcss": "^8.4.12",
    "tailwindcss": "^3.0.24",
    "typescript": "^4.5.4",
    "vite": "^2.9.0",
    "vite-plugin-pages": "^0.22.0",
    "vite-plugin-vue-layouts": "^0.6.0",
    "vue-tsc": "^0.29.8"
